<h1>Task Manager</h1>
<%= link_to 'Create New Task', new_task_path %>

<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>
  <p><%= task.details %></p>
  <%= link_to "ğŸ—‘",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you really quite sure?"} %>
  <%= link_to checkbox_path(task),
              method: :patch do %>
    <% if task.completed == false %>
        <i class="far fa-square"></i>
    <% else %>
        <i class="far fa-check-square"></i>
    <% end %>
  <% end %>
<% end %>

